<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    android:orientation="vertical"


    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_exp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#3D4F57"
        android:ellipsize="start"
        android:gravity="end"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txtx_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#3D4F57"
        android:ellipsize="end"
        android:gravity="end"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="32sp" />

    <LinearLayout
        android:id="@+id/linearV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_clear"
                style="@style/actionButton"
                android:background="@drawable/btn_orange_style"
                android:text="@string/ce"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_lpracket"
                style="@style/actionButton"
                android:background="@drawable/btn_orange_style"
                android:text="@string/r_bracket"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_rpracket"
                style="@style/actionButton"
                android:background="@drawable/btn_orange_style"
                android:text="@string/l_bracket"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_divide"
                style="@style/actionButton"
                android:background="@drawable/btn_orange_style"
                android:text="@string/divide"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_seven"
                style="@style/numButton"
                android:background="@drawable/btn_gray_style"
                android:text="@string/_7" />

            <Button
                android:id="@+id/btn_eight"
                style="@style/numButton"
                android:background="@drawable/btn_gray_style"
                android:text="@string/_8" />

            <Button
                android:id="@+id/btn_nine"
                style="@style/numButton"
                android:background="@drawable/btn_gray_style"
                android:text="@string/_9" />

            <Button
                android:id="@+id/btn_multi"
                style="@style/actionButton"
                android:background="@drawable/btn_orange_style"
                android:text="@string/multi"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_four"
                style="@style/numButton"
                android:background="@drawable/btn_gray_style"
                android:text="@string/_4" />

            <Button
                android:id="@+id/btn_five"
                style="@style/numButton"
                android:background="@drawable/btn_gray_style"
                android:text="@string/_5" />

            <Button
                android:id="@+id/btn_six"
                style="@style/numButton"
                android:background="@drawable/btn_gray_style"
                android:text="@string/_6" />

            <Button
                android:id="@+id/btn_minus"
                style="@style/actionButton"
                android:background="@drawable/btn_orange_style"
                android:text="@string/minus"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_one"
                style="@style/numButton"
                android:background="@drawable/btn_gray_style"
                android:text="@string/_1" />

            <Button
                android:id="@+id/btn_two"
                style="@style/numButton"
                android:background="@drawable/btn_gray_style"
                android:text="@string/_2" />

            <Button
                android:id="@+id/btn_three"
                style="@style/numButton"
                android:background="@drawable/btn_gray_style"
                android:text="@string/_3" />

            <Button
                android:id="@+id/btn_plus"
                style="@style/actionButton"
                android:background="@drawable/btn_orange_style"
                android:text="@string/plus"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dot"
                style="@style/numButton"
                android:background="@drawable/btn_gray_style"
                android:text="@string/dot"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_zero"
                style="@style/numButton"
                android:background="@drawable/btn_gray_style"
                android:text="@string/_0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_erase"
                style="@style/numButton"
                android:adjustViewBounds="false"
                android:background="@drawable/btn_gray_style"
                android:cropToPadding="false"
                android:isScrollContainer="false"
                android:scaleType="centerInside"
                android:src="@drawable/back_space" />

            <Button
                android:id="@+id/btn_equal"
                style="@style/actionButton"
                android:background="@drawable/btn_orange_style"
                android:text="@string/equal"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</android.widget.LinearLayout>
